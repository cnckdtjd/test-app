<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jacob.cartservice.mapper.CartItemMapper">
    <resultMap id="CartItemResultMap" type="CartItem">
        <id property="id" column="id"/>
        <result property="cartId" column="cart_id"/>
        <result property="productId" column="product_id"/>
        <result property="quantity" column="quantity"/>
        <result property="price" column="price"/>
        <result property="productName" column="product_name"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAllByCartId" resultMap="CartItemResultMap">
        SELECT * FROM cart_items WHERE cart_id = #{cartId}
    </select>

    <select id="findByCartIdAndProductId" resultMap="CartItemResultMap">
        SELECT * FROM cart_items WHERE cart_id = #{cartId} AND product_id = #{productId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart_items (cart_id, product_id, quantity, price, product_name, created_at, updated_at)
        VALUES (#{cartId}, #{productId}, #{quantity}, #{price}, #{productName}, NOW(), NOW())
    </insert>

    <update id="update">
        UPDATE cart_items
        SET quantity = #{quantity}, updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM cart_items WHERE id = #{id}
    </delete>

    <delete id="deleteAllByCartId">
        DELETE FROM cart_items WHERE cart_id = #{cartId}
    </delete>
</mapper> 