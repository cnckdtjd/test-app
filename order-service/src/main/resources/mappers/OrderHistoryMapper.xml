<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jacob.orderservice.repository.OrderHistoryMapper">

    <!-- 결과 매핑 정의 -->
    <resultMap id="orderHistoryResultMap" type="com.jacob.orderservice.model.OrderHistory">
        <id property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="statusFrom" column="status_from"/>
        <result property="statusTo" column="status_to"/>
        <result property="statusText" column="status_text"/>
        <result property="memo" column="memo"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 공통 컬럼 -->
    <sql id="orderHistoryColumns">
        id, order_id, status_from, status_to, status_text, memo, created_by, created_at
    </sql>

    <!-- 조회 쿼리 -->
    <select id="findById" resultMap="orderHistoryResultMap">
        SELECT 
            <include refid="orderHistoryColumns" />
        FROM 
            order_history
        WHERE 
            id = #{id}
    </select>

    <select id="findByOrderId" resultMap="orderHistoryResultMap">
        SELECT 
            <include refid="orderHistoryColumns" />
        FROM 
            order_history
        WHERE 
            order_id = #{orderId}
        ORDER BY 
            created_at DESC
    </select>

    <!-- 생성 쿼리 -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO order_history (
            order_id, status_from, status_to, status_text, memo, created_by, created_at
        ) VALUES (
            #{orderId}, #{statusFrom}, #{statusTo}, #{statusText}, #{memo}, #{createdBy}, #{createdAt}
        )
    </insert>

    <!-- 삭제 쿼리 -->
    <delete id="deleteById">
        DELETE FROM order_history WHERE id = #{id}
    </delete>

    <delete id="deleteByOrderId">
        DELETE FROM order_history WHERE order_id = #{orderId}
    </delete>
</mapper> 